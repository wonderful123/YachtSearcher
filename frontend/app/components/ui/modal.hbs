{{#if @isOpen}}
  <div class={{if @hideBackground "ui-modal-overlay"}}></div>

  <div class="ui-modal" {{on-click-outside @close}}>
    {{yield (hash
      header=(component "ui/modal/header")
      body=(component "ui/modal/body")
      footer=(component "ui/modal/footer")
    )}}
  </div>
{{/if}}
