<div class="sidebar-search boat-filter" {{did-insert this.setUrlQueryParams}}>
  <div class="sidebar-search-heading">Search</div>

  <label>Boat name/listing title:</label>
  <Input
    @value={{this.search}}
    {{on "change" this.handleFilter}}
    type="search"
    placeholder="Search by name"
    class="form-control"
  />

  <label>Length (ft)</label>
  <div class="twin-inputs">
    <Input
      @value={{this.minLength}}
      {{on "input" this.handleFilter}}
      type="number"
      placeholder="Min"
      class="form-control"
    />
    <Input
      @value={{this.maxLength}}
      {{on "input" this.handleFilter}}
      type="number"
      placeholder="Max"
      class="form-control"
    />
  </div>

  <label>Year</label>
  <div class="twin-inputs">
    <Input
      @value={{this.minYear}}
      {{on "input" this.handleFilter}}
      type="number"
      placeholder="Min"
      class="form-control"
    />
    <Input
      @value={{this.maxYear}}
      {{on "input" this.handleFilter}}
      type="number"
      placeholder="Max"
      class="form-control"
    />
  </div>

  <label>Price range</label>
  <div class="twin-inputs">
    <EmberMaskInput value={{this.minPrice}} mask="000.000.000" class="form-control" placeholder="Min" {{on "input" this.handleFilter}} />
    <!-- <Input
      @value={{this.minPrice}}
      {{on "keyup" this.handleFilter}}
      type="number"
      placeholder="Min"
      class="form-control"
    /> -->
    <Input
      @value={{this.maxPrice}}
      {{on "keyup" this.handleFilter}}
      type="number"
      placeholder="Max"
      class="form-control"
    />
  </div>
</div>

<div class="sidebar-filter">
  <div class="sidebar-filter-heading">Filter by:</div>
  <hr>
  <div class="filter-subheading">Region</div>
  <ul>
    <li>Australia</li>
    <li>World</li>
  </ul>
</div>
