<div class="boat-listing">

  <Ui::Carousel @images={{@boat.images}}>

    <div class="carousel-bubble price">{{format-currency @boat.price @boat.priceSymbol}}</div>
    <div class="carousel-bubble year-length">{{@boat.year}} - {{format-inches-to-feet @boat.lengthInches}}</div>
    <div class="listing-actions">
      <Ui::FavouriteToggle @boat={{@boat}} />
    </div>

  </Ui::Carousel>

  <div class="title">
    {{@boat.make}} {{@boat.model}}
  </div>

  <div class="details">
    <div class="description">{{@boat.description}}</div>
    <div class="location">{{@boat.location}}</div>
    <div class="date-listed">Listed: {{this.firstFound}}</div>
  </div>

</div>
