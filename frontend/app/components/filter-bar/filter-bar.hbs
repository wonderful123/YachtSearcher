<div class="filter-bar-container">

  {{svg-jar "search" class="icon search-icon"}}
  <Input
    placeholder="Search"
    type="search"
    @value={{@filter.search.value}}
    {{on "input" (fn this.updateSearchFilter "search")}}
    class="no-border search-input no-select"
  />

  {{#each this.filterComponents as |component|}}
    <FilterBar::FilterButton
      @filterComponent={{component}}
      @updateFilter={{@updateFilter}}
      @resetFilter={{action (fn this.resetFilter component)}}
      @toggleFilterButton={{action (fn this.toggleFilterButton component)}}
    />
  {{/each}}

</div>
