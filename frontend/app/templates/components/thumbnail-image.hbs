{{#if this.record.thumbnail}}
  <button class="thumbnail-button" {{action "toggleModal"}}>
    <img src={{url}} alt="Thumbnail" />
  </button>
{{/if}}

<BsModal @open={{this.isModalOpen}} @onHide={{action "toggleModal"}} as |Modal|>
  <Modal.header>
    <h4 class="modal-title">{{this.record.make}} {{this.record.model}}</h4>
  </Modal.header>
  <Modal.body>
    <BsCarousel @showControls=true @interval=false as |car|>
      {{#each this.images as |image|}}
        <car.slide>
          <img alt="" class="d-block w-100" height="400" width="100%" src="{{this.imageServer}}{{image}}">
        </car.slide>
      {{/each}}
    </BsCarousel>

    {{#if this.imagesLoading}}
      <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    {{/if}}
  </Modal.body>
</BsModal>
