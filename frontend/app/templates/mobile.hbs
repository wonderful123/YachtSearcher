<Mobile::SearchBar
  @toggleFilterMenu={{this.toggleFilterMenu}}
  @filterActive={{this.isFilterMenuShown}}
  @updateFilter={{this.updateFilter}}
  @filter={{this.filter}}
/>

<Mobile::InfoBar
  @boatsFound={{this.boatsFound}}
  @doSort={{this.doSort}}
  @sortby={{this.sortby}}
  @filter={{this.filter}}
/>

<Mobile::Listings
  @boats={{this.model}}
/>

<Mobile::FilterBar::Bar
  @filter={{this.filter}}
  @updateFilter={{this.updateFilter}}
  @isShown={{this.isFilterMenuShown}}
  @toggleFilterMenu={{this.toggleFilterMenu}}
/>
